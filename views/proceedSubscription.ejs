<body style="background-color: #1D1F39;">
    <div class="other-section ">
        <div class="row">
            <div class="col-12">
                <ul class="nav nav-tabs py-3" style="background-color:#000;">
                    <li class="nav-item me-auto">
                        <a class="ms-5" href="/home"><img
                        src="/pictures/Capture.PNG"
                        class="logo"
                        width="340px"
                        height="100em"
                      /></a>
                    </li>
                    <%if(username){%>
                        <li class="nav-item dropdown me-5">
                            <a style="color: #FFF89C" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><%=username%></a>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                              <%if(locals.admin){%>
                                <li><a class="dropdown-item" href="/admindashboard">Admin Dashboard</a></li>
                                <li><a class="dropdown-item" href="/adminuserreport">User report</a></li>
                                <li><a class="dropdown-item" href="/admincontentreport">Content report</a></li>
                              <%}%>
                              <li><a class="dropdown-item" href="/unanimous/profile">My profile</a></li>
                              <li><a class="dropdown-item" href="/catalogue">Catalogue</a></li>
                              <li><a class="dropdown-item" href="/profile/followlist">My follow list</a></li>
                              <li><a class="dropdown-item" href="/nkash">My nkash</a></li>
                              <li><a class="dropdown-item" href="/subscription">Buy subscription</a></li>
                              <li><a class="dropdown-item" href="/submission">Submissions</a></li>
                              <li><a class="dropdown-item" href="/post">Forum</a></li>
                              <li><a class="dropdown-item" href="/searchby">SearchByCategory</a></li>
                              <li><hr class="dropdown-divider"></li>
                              <li><a class="dropdown-item" href="/home/logout">Logout</a></li>
                            </ul>
                        </li>
                    <%}else{%>
                        <li class="nav-item">
                            <a class="nav-link  my-link-style2 text-uppercase" href="/users/logPage">Login</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link  my-link-style2 text-uppercase" href="/users/register">Register</a>
                        </li>
                    <%}%>
                </ul>
            </div>
        </div>  
    </div> 
    
    <div class="container mt-5 px-5">
      <div class="mb-4" style="color:#FFF89C">
        <h2>Confirm order and pay</h2>
        <span
          >Please make the payment, after that you can enjoy all promised
          features and benefits.</span
        >
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="card p-3">
            <div id="before">
                <h6 class="text-uppercase">User Information</h6>
                <label for="floatingInput">Email address</label>
                <div class="form-floating mb-2 mt-2">
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    placeholder="name@example.com"
                    required
                  />

                </div>
                <label for="floatingPassword">Password</label>
                <div class="form-floating mt-2">
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Password"
                    required
                  />
                  
                </div><br>
                <div class="d-grid gap-2" id="clickme">
                  <button class="btn btn-info" type="button">Send OTP</button>
                </div>
            </div>
            <div id="after" style="display: none">
                <div class="mt-4 mb-4">
                  <h6 class="text-uppercase">Billing Information</h6>

                  <div class="row mt-3">
                    <div class="col-md-8">
                      <p class="fs-3 fw-light">
                        Your Order:
                        <span class="fs-3 text-muted fw lighter" id="order"
                          ><%=locals.pack%> Pack x <span id="koita"
                          >1</span></span
                        >
                      </p>
                    </div>
                  </div>

                  <div class="row mb-2">
                    <div class="col-6">
                      
                        <label class="ps-1 mb-1 fw-normal" for="floatingInput"
                          >Quantity</label
                        >
                        <input
                        onkeydown="javascript: return ['Backspace','Delete','ArrowLeft','ArrowRight'].includes(event.code) ? true : !isNaN(Number(event.key)) && event.code!=='Space'"
                          type="number"
                          class="form-control"
                          id="quantity"
                          value="1"
                          required
                        /> 
                        <label class="ps-1 mb-1 fw-normal" for="floatingInput" id="niche" style="color:red"
                          ></label
                        >
                    </div>
                    <div class="col-6">
                      <fieldset disabled>
                        <label class="ps-1 mb-1" for="floatingInput"
                          >Total Price(ncoins)</label
                        >
                        <input
                          type="Number"
                          class="form-control"
                          id="price"
                          value="<%=locals.price%>"
                        />
                      </fieldset>
                    </div>
                  </div>

                  <div class="row mb-2">
                    
                    <div class="col-6">
                      <label class="ps-1 mb-1 fw-normal" for="floatingInput"
                        >pin numner</label
                      >
                      <input
                        type="password"
                        class="form-control"
                        id="pin"
                        placeholder=""
                        required
                      />
                    </div>

                    <div class="col-6">
                      <label class="ps-1 mb-1 fw-normal" for="floatingInput"
                        >OTP</label
                      >
                      <input
                        type="password"
                        class="form-control"
                        id="otp"
                        placeholder=""
                        required
                      />
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-6">
                    <div class="d-grid gap-2">
                      <button
                        class="btn btn-outline-danger"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#cancelModal"
                      >
                        Cancel and Back
                      </button>
                    </div>
                  </div>

                  <div class="col-6">
                    <div class="d-grid gap-2">
                      <button
                      id="proceedtopayment"
                        class="btn btn-outline-success"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#proceedModal"
                      >
                        Proceed to Payment
                      </button>
                    </div>
                  </div>
                  <!-- Modal -->
                  <div
                    class="modal fade"
                    id="cancelModal"
                    tabindex="-1"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-body">
                          Are you sure that you wantn to cancel the payment?
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-outline-success btn-sm"
                            data-bs-dismiss="modal"
                          >
                            No
                          </button>
                          <a href="/subscription">
                          <button
                            type="button"
                            class="btn btn-outline-danger btn-sm"
                          >
                            Yes
                          </button>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Collapse -->
                  <div
                    class="modal fade"
                    id="proceedModal"
                    tabindex="-1"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div
                      class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                    >
                      <div class="modal-content">
                        <div class="modal-header">Final Step</div>
                        <div class="modal-body">
                          <div class="card mt-2 mb-2">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-3">
                                  <p class="lh-1">UserName</p>
                                  <p class="lh-1">Email</p>
                                  <p class="lh-1">Order</p>
                                  <p class="lh-1">Total Price</p>
                                </div>
                                <div class="col-8">
                                  <p class="lh-1" id="cusername"><%=locals.username%></p>
                                  <p class="lh-1" id="cemail"></p>
                                  <p class="lh-1" id="corder"></p>
                                  <p class="lh-1" id="cprice"></p>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button
                              type="button"
                              class="btn btn-outline-danger"
                              data-bs-dismiss="modal"
                            >
                              Cancel
                            </button>
                            <button id ="payment" type="button" class="btn btn-outline-success" data-bs-dismiss="modal">
                              Confirm Payment
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              

              <div id="afterafter" style="display: none">
                <div class="row">
                  
                  <div class="col-12">
                    <div class="card">
                      <h5 class="card-header">Subscription</h5>
                      <div class="card-body">
                        <h5 class="card-title">Subscription details</h5>
                        <p class="card-text">
                          <p style="font-size: 20px">
                            You have successfully subscribed for this package
                          </p>
                          <p style="font-size: 20px">
                            Your End date for subscription:
                          </p>
                          <p style="font-size: 20px">
                            <span id="enddate"></span>
                          </p>
                        </p>
                        <a href="/home" class="btn btn-primary">Go to homepage</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>


          </div>
        </div>
      </div>
    </div>

