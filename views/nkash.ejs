    <p>
      <div class="d-grid gap-2 col-6 mx-auto mb-4">
        <button
          type="button"
          class="btn btn-outline-primary"
          data-bs-toggle="collapse"
          data-bs-target="#collapseExample"
          aria-expanded="false" aria-controls="collapseExample"
        >
        Update PIN
        </button>
      </div>
    </p>
    <div class="collapse" id="collapseExample">
      
        <div class="d-grid gap-2 col-6 mx-auto mb-4">
          <form id="update">
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Pin</label>
              <input type="password" class="form-control" id="pin" placeholder="give pin">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">New Pin</label>
              <input type="password" class="form-control" id="newpin" placeholder="give new pin">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Confirm Pin</label>
              <input type="password" class="form-control" id="repin" placeholder="give new pin to confirm">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
