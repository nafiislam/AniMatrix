          <!-- Button trigger modal -->
      <div class="d-grid gap-2 col-6 mx-auto mb-4">
        <button
          type="button"
          class="btn btn-outline-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
        Give me power
        </button>
      </div>
  
      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Transaction information</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <p class="card-text"style="font-size:25px;"><b>Select payment method: </b></p>
                <img id="image" class="image" src="/pictures/bkash.jpg" width="50%;">
              <div class="mb-3" id="tidbox" style="display:none;">
                <label for="exampleFormControlInput1" class="form-label"
                  >Transaction ID</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="tid"
                  placeholder="Enter transaction ID"
                  name="tid"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="button" id="add" class="btn btn-primary" data-bs-dismiss="modal">Add balance</button>
            </div>
          </div>
        </div>
      </div>


      <div class="d-grid gap-2 col-6 mx-auto mb-4">
        <button
          type="button"
          class="btn btn-outline-primary"
          data-bs-toggle="modal"
          data-bs-target="#pinner"
        >
        Give me power
        </button>
      </div>
  
      <!-- Modal -->
