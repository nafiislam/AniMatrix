            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px">
                <div class="card-body p-5">
                  <h2 class="text-uppercase text-center mb-5">
                    Create an account
                  </h2>

                  <form id="register">
                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example1cg"
                        ><b>UserName</b></label
                      >
                      <input
                        type="text"
                        name="username"
                        id="username"
                        class="form-control form-control-lg"
                        placeholder="Give your Name"
                        value="<%= locals.username %>"
                        required
                      />
                      <div id="underuser" style="color:red;" class="form-text"></div>
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example3cg"
                        ><b>Email Id</b></label
                      ><input
                        type="email"
                        name="email"
                        id="form3Example3cg"
                        class="form-control form-control-lg"
                        placeholder="Give your Email Id"
                        value="<%= locals.email %>"
                        required
                      />
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example4cg"
                        ><b>Password</b></label
                      ><input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control form-control-lg"
                        placeholder="Password"
                        required
                      />
                      <div id="underpass" style="color:red;" class="form-text"></div>
                    </div>

                    <div class="form-outline mb-1">
                      <label class="Confirm Password" for="form3Example4cdg"
                        ><b>Confirm password</b></label
                      ><input
                        type="password"
                        name="repassword"
                        id="repassword"
                        class="form-control form-control-lg"
                        placeholder="Give your password again"
                        required
                      />
                      <div id="underrepass" style="color:red;" class="form-text"></div>
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example3cg"
                        ><b>Country</b></label>
                        <!-- <input
                        type="text"
                        name="country"
                        id="form3Example6cg"
                        class="form-control form-control-lg"
                        placeholder="write name of your country"
                        value="<%= locals.country %>"
                        required
                      /> -->
                      <select id="form3Example6cg" class="form-control form-control-lg" name="country" value="<%= locals.country %>" placeholder="write name of your country">
                        <%for(let i=0; i<list.length;i++){ %>
                          <option value="<%=list[i].Name%>"><%=list[i].Name%></option>
                        <% }%>
                      </select>
                      
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example3cg"
                        ><b>birthDay</b></label
                      ><input
                        type="date"
                        name="birthday"
                        id="form3Example7cg"
                        class="form-control form-control-lg"
                        placeholder="birthDay"
                        value="<%= locals.birthday %>"
                        required
                      />
                      
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form3Example3cg"
                        ><b>gender</b></label>
                      <select id="form3Example8cg" class="form-control form-control-lg" name="gender"value="<%= locals.gender %>">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                      </select>
                      
                    </div>

                    <div class="form-check d-flex mb-3">
                      <input
                        class="form-check-input me-2"
                        name="checkbox"
                        type="checkbox"
                        required
                        id="form2Example3cg"
                      />
                      <label class="form-check-label" for="form2Example3g">
                        I agree all statements in
                        <a href="#!" class="text-body"
                          ><u>Terms of service</u></a
                        >
                      </label>
                    </div>

                    <div class="d-flex justify-content-center">
                      <input
                        type="submit"
                        class="btn btn-success col-12 btn-lg gradient-custom-4 text-body"
                        value="Register"
                        value="Add"
                      />
                    </div>

                    <p class="text-center text-muted mt-5 mb-0">
                      Have already an account?
                      <a href="/users/logPage" class="fw-bold text-body"
                        ><u>Login here</u></a
                      >
                    </p>
                  </form>
