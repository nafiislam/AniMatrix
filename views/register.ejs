  <body style="background-color: #1D1F39;" onload="getter()">
    
    <% if(msg.length > 0) {%>
      <% if(msg=='successfully registered'){ %> 
      <div class="alert alert-success alert-dismissible fade show">
        <%=msg%> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%}else if(msg=='Same username is already present so no insert'){%>
        <div class="alert alert-danger alert-dismissible fade show">
          <%=msg%> 
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%}else if(msg=='Confirm password did not match'){%>
          <div class="alert alert-danger alert-dismissible fade show">
            <%=msg%> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%}else if(msg=='Password must be atleast of 4 characters'){%>
            <div class="alert alert-danger alert-dismissible fade show">
              <%=msg%> 
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <%}%>
    <% } %>
