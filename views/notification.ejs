          </div>
      </div>  
  </div> 

    <br><br><br>
    <div class="input-group" x-data="{ option: 'unseen', show:'seen all' }">
        <button
          id="t"
          style="color: white"
          class="btn btn-outline-secondary dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
          x-text="option"
        ></button>
        <ul class="dropdown-menu">
          <li><a id="unseen"class="dropdown-item" @click="option='unseen',show='seen all'">unseen</a></li>
          <li><a id="seen"class="dropdown-item" @click="option='seen',show=''">seen</a></li>
          <li><a id="all"class="dropdown-item" @click="option='all',show='seen all'">all</a></li>
        </ul>
        <template x-if="show">
            <button onclick="seenAll()" type="button" class="btn btn-primary  btn-lg">Seen all</button>
        </template>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody id="target">

          </tbody>
    </table>


