    <div class="">
      <h1 class="text-center" style="color: #FFF89C">Forum</h1>
      <h6 class="text-center" style="color: #FFF89C">
        A place where you can share your feelings about us, and share your
        valuable opinion, observation about our contents. Please make sure that
        you follow all our community guidelines and do not violate any rules. Be
        positive, be friendly.
      </h6>
    </div>
    <!-- Button trigger modal -->
    <div class="d-grid gap-2 col-6 mx-auto mb-4">
      <button
        type="button"
        class="btn btn-outline-primary"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Create a Post
      </button>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create a Post</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Title</label
              >
              <input
                type="text"
                class="form-control"
                id="title"
                placeholder=""
              />
            </div>
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label"
                >Text Box</label
              >
              <textarea
                class="form-control"
                id="paragraph"
                rows="3"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Content Tag</label
              >
              <select id="content" class="form-select" aria-label="Default select example">
                <option value ="" selected></option>
                <%for(let i=0;i<locals.contents.length;i++){%>
                  <option value="<%=locals.contents[i][0]%>"><%=locals.contents[i][1]%></option>
                <%}%>
              </select>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Character Tag</label
              >
              <select id ="character"class="form-select" aria-label="Default select example">
                <option value="" selected></option>
                <%for(let i=0;i<locals.characters.length;i++){%>
                  <option value="<%=locals.characters[i][0]%>"><%=locals.characters[i][1]%></option>
                <%}%>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button id="postbutton" type="button" class="btn btn-primary" data-bs-dismiss="modal">Post</button>
          </div>
        </div>
      </div>
    </div>

    <div id="parent">
      <%for(let i=0;i<locals.posts.length;i++){%>
        <div class="card border-secondary mb-2" >
          <div class="card-header text-success">
            <a href="/profile/<%=locals.posts[i][0]%>" style="text-decoration: none">
              <h5 class="card-title"><%=locals.posts[i][7]%></h5>
            </a>
          </div>
          <a href="/post/<%=locals.posts[i][1]%>" style="text-decoration: none">
            <div class="card-body text-secondary">
              <h5 class="card-title"><%=locals.posts[i][2]%></h5>
            </div>
            <div class="row text-dark ms-2">
              <div class="col-2" style="color:#355764">
                <i class="fa-solid fa-2x fa-arrow-up-from-bracket"></i>&nbsp;&nbsp;<span style="color:white; font-size: 30px;"><%=locals.posts[i][4]%></span>
              </div>
            </div>
          </a>
        </div>
        <%}%>
    </div>
    
